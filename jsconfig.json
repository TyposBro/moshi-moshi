{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@*": ["src/*"],
      "@auth": ["./src/auth"],
      "@calendar": ["./src/calendar"],
      "@edit": ["./src/edit"],
      "@record": ["./src/record"],
      "@styles": ["./src/styles"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
